        </svg>
      </div>
      <div class="{{componentName}}-5__time wiloke-5-time h:40px bd:2px_solid_#000 d:inline-flex jc:center ai:center p:7px_9px dateTypo ff:Lora fs:italic fz:12px ta:center@+sm fw:500 trs:all_.3s c:#464646 c:#fff*group-hover trs:all_0.3s lh:1.5" style="{{ dateTypo }} {{ colorSecondaryCssVariable }}{{ colorPrimaryCssVariable }}">{{post.createDate|date("F j, Y")}}</div>
    </div>
    {% if post.title %}
      <h3 class="m:0! lh:0! pt:9px">
        <a href="{{post.link}}" class="{{ componentName }}-5__title titleTypo ff:Poppins td:none! fz:16px fw:400 lh:1.7 c:#000 op:0.7|h trs:0.3s lines-2" style="{{ titleTypo }}{{colorGray9CssVariable}}"> {{post.title | truncate(50)}} </a>
      </h3>
    {% endif %}
    <div class="d:flex ai:center fxw:wrap pt:12px">
      {% if post.categories[0] %}
      <div class=" d:flex ai:center ">
        <a href="{{post.categories[0].link}}" class="{{ componentName }}-5__category td:none! fz:14px ff:Poppins fz:14px tt:uppercase fw:500 c:#AB9871 lts:2px! lh:1.5 d:inline-block" style="{{ categoryTypo }}{{ colorPrimaryCssVariable }}">{{post.categories[0].name}}</a>
      </div>
      {% endif %}
      <div class="m:0_10px ff:Poppins fz:14px fw:500 c:#D2D2D2">â€”</div>
      <div class=" m:0! d:flex ai:center">
        <a href="{{post.link}}" class="{{ componentName }}-5__comments commentTypo ff:Poppins fz:14px fw:500 c:#4E4E4E mr:3px td:none! d:block" style="{{ commentTypo }} {{ colorSecondaryCssVariable }}">
          {{post.comments|length}}
        </a>
        <span class="{{ componentName }}-5__comments commentTypo ff:Lora fz:14px fw:500 fs:italic c:#737373 d:block" style="{{ commentTypo }} {{ colorSecondaryCssVariable }} ">Comments</span>
      </div>
    </div>

  </div>
</div>
